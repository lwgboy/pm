<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>  
    <package name="signin" extends="struts-default">
    
        <action name="Login" class="com.nastation.pm.struts.LoginAction" method="execute">
            <result name="success">/jsp/frontend/dashboard.jsp</result>           
            <result name="input">/jsp/login.jsp</result>
        </action> 
             
        <action name="addUser" class="com.nastation.pm.struts.AddUserAction" method="execute">
            <result name="success">/jsp/login.jsp</result>           
            <result name="input">/jsp/login.jsp</result>
        </action>
        
    </package>
</struts>